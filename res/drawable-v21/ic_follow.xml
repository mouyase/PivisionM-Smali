<?xml version="1.0" encoding="utf-8"?>
<animated-selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" android:id="@id/state_off" android:drawable="@drawable/ic_add" />
    <item android:state_checked="true" android:id="@id/state_on" android:drawable="@drawable/ic_done" />
    <transition android:drawable="@drawable/ic_follow_on" android:toId="@id/state_on" android:fromId="@id/state_off" />
    <transition android:drawable="@drawable/ic_follow_off" android:toId="@id/state_off" android:fromId="@id/state_on" />
</animated-selector>